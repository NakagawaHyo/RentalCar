@model IEnumerable<User>

@{
    ViewData["Title"] = "従業員管理";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="m-0">@ViewData["Title"]</h3>
    <a class="btn btn-primary" asp-action="Detail">新規従業員登録</a>
</div>
<table class="table align-middle">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoginId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoginId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-secondary">詳細</a>
                </td>
            </tr>
        }
    </tbody>
</table>
